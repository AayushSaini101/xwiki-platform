  <defaultTemplate/>
  <validationScript/>
  <comment/>
  <minorEdit>false</minorEdit>
  <syntaxId>xwiki/2.1</syntaxId>
  <hidden>true</hidden>
  <content>{{velocity}}
{{html}}
#set($vdoc = $doc)
#if (!$BSTDocRef)
   #set($BSTDocRef = $doc.getFullName())
#end
#set($hql = "select distinct step.order, step.element, step.title, step.backdrop, step.placement, step.targetPage from Document doc, doc.object(TourCode.StepClass) as step where doc.fullName='$BSTDocRef' order by step.order")
#set($steps = $services.query.xwql($hql).execute())
#set($nbsteps = 0)
#set($discard = $xwiki.ssx.use("TourCode.StepSheet"))
#set($discard = $xwiki.jsx.use("TourCode.StepSheet"))
&lt;div id="stepsBlk"&gt;
   #if ($xcontext.action == 'edit')
      &lt;a class="actionBtn addItemBtn" id="addStep" href="javascript:;" rel="$doc.getDocumentReference()"&gt;Add new step&lt;/a&gt;
   #end
   &lt;div id="stepsContainer"&gt;
      &lt;table id="stepsTable"&gt;
         &lt;tr id="stepsTableH"&gt;
            &lt;th&gt;Order&lt;/th&gt;
            &lt;th&gt;Element&lt;/th&gt;
            &lt;th&gt;Title&lt;/th&gt;
            &lt;th&gt;Backdrop&lt;/th&gt;
            &lt;th&gt;Placement&lt;/th&gt;
            &lt;th&gt;Target page&lt;/th&gt;
            #if ($xcontext.action == 'edit' || $pageMode == "edit")
               &lt;th style="text-align:right"&gt;Actions&lt;/th&gt;
            #end
         &lt;/tr&gt;
         #if ($steps &amp;&amp; $steps.size() &gt; 0)
            #set($nbsteps = $steps.size())
            #set($x = 0)
            #foreach($step in $steps)
               #set($order = $step[0])
               #set($element = $step[1])
               #set($title = $step[2])
               #set($backdrop = $step[3])
               #set($placement = $step[4])
               #set($targetPage = $step[5]) 
               &lt;tr #if($x%2 != 0) class="tr1" #end&gt;
                  &lt;td&gt;$!mathtool.add($order,1)&lt;/td&gt;
                  &lt;td&gt;$!element&lt;/td&gt;
                  &lt;td&gt;$!title&lt;/td&gt;
                  &lt;td&gt;
                  #if($backdrop == 0)
                     No 
                  #else
                     Yes 
                  #end
                  &lt;/td&gt;
                  &lt;td&gt;
                     $!placement
                  &lt;/td&gt;
                  &lt;td&gt;
                     $!targetPage
                  &lt;/td&gt; 
                  #if ($xcontext.action == 'edit' || $pageMode == "edit")
                     &lt;td&gt;
                        &lt;a href="javascript:;" class="actionBtn editItemBtn editStep" rel="$!order" title="Edit step"&gt;Edit&lt;/a&gt;
                        &lt;a href="javascript:;" class="actionBtn deleteItemBtn deleteStep" rel="$!order" title="Delete step"&gt;Delete&lt;/a&gt;
                     &lt;/td&gt;
                  #end
               &lt;/tr&gt;
               #set($x = $x + 1)       
            #end
         #end
      &lt;/table&gt;
      &lt;input type="hidden" value="$nbsteps" id="nbsteps"/&gt;
   &lt;/div&gt;
   &lt;input type="hidden" value="$BSTDocRef" id="BSTDocRef"/&gt;
&lt;/div&gt;
{{/html}}
{{/velocity}}</content>
