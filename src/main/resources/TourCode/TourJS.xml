      <code>//----------------------------------
// RequireJS configuration
//----------------------------------
requirejs.config({
  paths: {
    #if ("$!request.minify" == 'false')
      'bootstrap-tour': "$services.webjars.url('bootstrap-tour', 'js/bootstrap-tour.js')"
    #else
      'bootstrap-tour': "$services.webjars.url('bootstrap-tour', 'js/bootstrap-tour.min.js')"
    #end
  },
  shim: {
    'bootstrap-tour': {
      deps: ['bootstrap', 'jquery'],
      exports : 'Tour'
    }
  }
});
//----------------------------------
// Create a bootstrap tour module
//----------------------------------
define(["bootstrap-tour", "jquery"], function(Tour, $) {
  return {
    createTour : function (doc) {
      var ajaxOptions = {
        url         : new XWiki.Document('TourJson', 'TourCode').getURL('get', 'xpage=plain&amp;outputSyntax=plain&amp;tourDoc=' + doc),
        dataType    : 'json',
        success     : function (response) {
          var jsonData = response;
          var i, n     = jsonData.steps.length;
          var tour     = new Tour({
            backdrop: true,
            storage : false
          });
          for (var i = 0; i &lt; n; i++) {
            tour.addStep({
              element   : jsonData.steps[i].element,
              title     : jsonData.steps[i].title,
              content   : jsonData.steps[i].content,
              placement : jsonData.steps[i].placement
            });
          }
          tour.init();
          tour.restart();
        }
      };
      var executeAjax = function(doc) {
        $.ajax(ajaxOptions);
      };
      executeAjax(doc);
    }
  };
});
