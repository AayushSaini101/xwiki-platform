#if ($xcontext.action == 'get')
  #set ($discard = $response.setContentType('application/json'))
  #set ($discard = $doc.use('TourCode.StepClass'))
  #set ($tourDoc = $xwiki.getDocument($request.tourDoc))
  #set ($steps = [])
  #foreach($object in $tourDoc.getObjects('TourCode.StepClass'))
    #set ($backdrop = $object.getProperty('backdrop').value == '1')
    #set ($step = { 'element'  : $object.getProperty('element').value,
                    'title'    : $object.getProperty('title').value,
                    'content'  : $object.getProperty('content').value,
                    'placement': $object.getProperty('placement').value,
                    'order'    : $object.getProperty('order').value,
                    'backdrop' : $backdrop })
    #set ($discard = $steps.add($step))
  #end
  $jsontool.serialize({'steps': $steps})
#end
{{/velocity}}
